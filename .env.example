# Application
APP_NAME=Healthcare Analytics Platform
DEBUG=false
ENVIRONMENT=development

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key

# Kinesis
KINESIS_STREAM_NAME=healthcare-events
KINESIS_DLQ_STREAM_NAME=healthcare-events-dlq
ENABLE_KINESIS_CONSUMER=false

# KMS
KMS_KEY_ID=alias/healthcare-analytics-key

# Database (PostgreSQL/Redshift)
DATABASE_URL=postgresql://user:password@localhost:5432/healthcare_analytics
REDSHIFT_HOST=your-cluster.redshift.amazonaws.com
REDSHIFT_PORT=5439
REDSHIFT_DB=analytics
REDSHIFT_USER=admin
REDSHIFT_PASSWORD=your-password

# Redis
REDIS_URL=redis://localhost:6379/0

# Encryption (change in production!)
ENCRYPTION_SECRET=change-this-in-production
ENCRYPTION_SALT=change-this-salt-in-production

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
